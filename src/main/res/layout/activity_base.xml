<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical"
    tools:context=".BaseActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="?attr/homeAsUpIndicator"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/toolbarBaseTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/view_converter_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/view_converter_string1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/string1_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/string1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/string1_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:clickable="true"
                android:text="0"
                android:textColor="@color/Orange"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/string1_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"
                android:textStyle="bold"
                android:gravity="end"
                android:drawablePadding="2dp"
                android:drawableEnd="@drawable/arrow_drop_down_24"
                android:hint="Укажите дату"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/string1_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textSize="14sp"/>

        <RelativeLayout
            android:id="@+id/view_converter_string2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/string2_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/string2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/string2_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:clickable="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/string2_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"
                android:textColor="@color/Orange"
                android:textStyle="bold"
                android:gravity="end"
                android:drawablePadding="2dp"
                android:drawableEnd="@drawable/arrow_drop_down_24"
                android:hint="Укажите дату"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/string2_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textSize="14sp"/>

        <RelativeLayout
            android:id="@+id/view_converter_string3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/string3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/string3_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="26sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_converter_string4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/string4_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_converter_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#D8D8D8" />

    <LinearLayout
        android:id="@+id/view_converter_keyboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/c_btn7"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/actionBarItemBackground"
                android:fontFamily="@font/roboto"
                android:text="7"
                android:textSize="34sp" />

            <Button
                android:id="@+id/c_btn4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/actionBarItemBackground"
                android:fontFamily="@font/roboto"
                android:text="4"
                android:textSize="34sp" />

            <Button
                android:id="@+id/c_btn1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/actionBarItemBackground"
                android:fontFamily="@font/roboto"
                android:text="1"
                android:textSize="34sp" />

            <Button
                android:id="@+id/c_btn_nan"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/actionBarItemBackground"
                android:fontFamily="@font/roboto"
                android:text="\?"
                android:textSize="34sp"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/c_btn8"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/actionBarItemBackground"
                android:fontFamily="@font/roboto"
                android:text="8"
                android:textSize="34sp" />

            <Button
                android:id="@+id/c_btn5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/actionBarItemBackground"
                android:fontFamily="@font/roboto"
                android:text="5"
                android:textSize="34sp" />

            <Button
                android:id="@+id/c_btn2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/actionBarItemBackground"
                android:fontFamily="@font/roboto"
                android:text="2"
                android:textSize="34sp" />

            <Button
                android:id="@+id/c_btn0"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/actionBarItemBackground"
                android:fontFamily="@font/roboto"
                android:text="0"
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/c_btn9"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/actionBarItemBackground"
                android:fontFamily="@font/roboto"
                android:text="9"
                android:textSize="34sp" />

            <Button
                android:id="@+id/c_btn6"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/actionBarItemBackground"
                android:fontFamily="@font/roboto"
                android:text="6"
                android:textSize="34sp" />

            <Button
                android:id="@+id/c_btn3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/actionBarItemBackground"
                android:fontFamily="@font/roboto"
                android:text="3"
                android:textSize="34sp" />

            <Button
                android:id="@+id/c_btn_comma"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/actionBarItemBackground"
                android:fontFamily="@font/roboto"
                android:text=","
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/c_btn_clear"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_rectangle_convert_button"
                android:fontFamily="@font/roboto"
                android:text="AC"
                android:textAllCaps="false"
                android:textColor="@color/Orange"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <Button
                android:id="@+id/c_btn_erase"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_rectangle_convert_button"
                android:text="⌫"
                android:textColor="@color/Orange"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <Button
                android:id="@+id/c_plus_minus"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_rectangle_convert_button"
                android:fontFamily="@font/roboto"
                android:text="+/-"
                android:textColor="@color/Orange"
                android:textStyle="bold"
                android:textSize="24sp"
                android:typeface="serif" />

            <Button
                android:id="@+id/c_btn_go"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_rectangle_convert_button"
                android:fontFamily="@font/roboto"
                android:text="GO"
                android:textAllCaps="false"
                android:textColor="@color/Orange"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
