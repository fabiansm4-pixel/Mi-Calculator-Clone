<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".MoneyFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="horizontal"
        android:columnCount="3"
        android:rowCount="2">

        <LinearLayout
            android:id="@+id/investments_button"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/investments_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:background="@drawable/investments"/>

            <TextView
                android:id="@+id/investments_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="16dp"
                android:text="@string/investments"
                android:textColor="@color/DarkGrey"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/currency_button"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/currency_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:background="@drawable/currency"/>

            <TextView
                android:id="@+id/currency_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="16dp"
                android:text="@string/currency"
                android:textColor="@color/DarkGrey"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/credit_button"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/credit_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:background="@drawable/credit"/>

            <TextView
                android:id="@+id/credit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="16dp"
                android:text="@string/credit"
                android:textColor="@color/DarkGrey"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/split_bill_button"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/split_bill_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:background="@drawable/split_bill"/>

            <TextView
                android:id="@+id/split_bill_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="16dp"
                android:text="@string/split_bill"
                android:textColor="@color/DarkGrey"
                android:textSize="16sp"/>

        </LinearLayout>
    </GridLayout>

</ScrollView>