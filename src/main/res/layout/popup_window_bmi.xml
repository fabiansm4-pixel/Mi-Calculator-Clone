<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainViewBMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_rectangle_window_converters"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingTop="30dp"
            android:firstBaselineToTopHeight="0dp"
            android:includeFontPadding="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result_bmi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:firstBaselineToTopHeight="0dp"
                android:includeFontPadding="false"
                android:text="20,8"
                android:textColor="@color/Orange"
                android:textSize="60sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:includeFontPadding="false"
                    android:text="ИМТ"
                    android:textColor="#707480"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/result_type_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:paddingStart="1dp"
                    android:paddingTop="5dp"
                    android:text="Норма"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="#707480"
            android:elevation="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Информация"
            android:textColor="#707480"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Недостаток веса"
                android:textColor="#4E8FE3"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Обычный"
                android:textColor="#64B501"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Избыточный вес"
                android:textColor="#EB4E69"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="#4E8FE3"
                android:elevation="5dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="#64B501"
                android:elevation="5dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="#EB4E69"
                android:elevation="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:includeFontPadding="false"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="16,0"
                android:textColor="#707480"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="18,5"
                android:textColor="#707480"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="25,0"
                android:textColor="#707480"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:includeFontPadding="false"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="40,0"
                android:textColor="#707480"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:text="powered by ilyxan89"
            android:textColor="#707480"
            android:textSize="10sp" />

    </LinearLayout>

    <Button
        android:id="@+id/send_screenshot_BMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Orange"
        android:text="Отправить"
        android:layout_marginTop="35dp"
        android:textAllCaps="false"
        android:textColor="@color/White" />

</LinearLayout>